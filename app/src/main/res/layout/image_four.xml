<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/tb09_1"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/news_image1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/tb09_2"
            android:layout_toRightOf="@+id/news_image" />

        <ImageView
            android:id="@+id/news_image2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/tb09_3"
            android:layout_toRightOf="@+id/news_image1" />

        <ImageView
            android:id="@+id/news_image3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/tb09_4"
            android:layout_toRightOf="@+id/news_image2" />

        <TextView
            android:id="@+id/publish_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_image"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:background="#000" />
</RelativeLayout>