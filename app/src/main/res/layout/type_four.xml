<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="myItemClick">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/news_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/news_text" />

        <ImageView
            android:id="@+id/news_image1"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/news_text"
            android:layout_toRightOf="@+id/news_image" />

        <ImageView
            android:id="@+id/news_image2"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/news_text"
            android:layout_toRightOf="@+id/news_image1" />

        <ImageView
            android:id="@+id/news_image3"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/news_text"
            android:layout_toRightOf="@+id/news_image2" />

        <TextView
            android:id="@+id/publish_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/news_image"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:background="#E8E8E8" />

</RelativeLayout>