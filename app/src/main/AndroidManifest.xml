<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newsboard">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InfoBoard">
        <activity android:name=".UIController.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IntentTestActivity">
        </activity>
        <!-- ArticleActivity采用singleTask启动模式-->
        <activity android:name=".feature.article.ArticleActivity"
                  android:launchMode="singleTask">
        </activity>
        <activity android:name=".feature.user.LoginActivity">
        </activity>
        <activity android:name=".feature.user.LogoutActivity" />
    </application>

    </manifest>